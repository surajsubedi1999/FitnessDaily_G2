<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FitnessDaily" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Light background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>

        <!-- Light mode action bar -->
        <item name="actionBarStyle">@style/LightActionBar</item>
    </style>

    <style name="LightActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/LightActionBarTitle</item>
    </style>

    <style name="LightActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>